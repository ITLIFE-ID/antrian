<div class="row mb-3">
  <div class="col-12">
    <select id="counter">
      <option>Pilih Counter</option>
      <%@counters.each do |c|%>
        <option value="<%=c.id%>" <%="selected" if params[:counter_id].to_i == c.id%>><%=c.service.name%> / Loket Nomor <%=c.number%></option>
        <%end%>
      </select>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3 col-6">
      <div class="small-box bg-info">
        <div class="inner">
          <h3><%=@current_queue&.letter || "A"%> <%=@current_queue&.number || "000"%></h3>
          <p>Antrian Sekarang</p>
        </div>
        <div class="icon">
          <i class="fas fa-person-booth"></i>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-6">
      <div class="small-box bg-success">
        <div class="inner">
          <h3><%=@waiting_queues%></h3>
          <p>Sedang Menunggu</p>
        </div>
        <div class="icon">
          <i class="fas fa-people-roof"></i>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-6">
      <div class="small-box bg-warning">
        <div class="inner">
          <h3><%=@offline_queues%></h3>
          <p>Antrian Offline</p>
        </div>
        <div class="icon">
          <i class="fas fa-computer"></i>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-6">
      <div class="small-box bg-danger">
        <div class="inner">
          <h3><%=@online_queues%></h3>
          <p>Antrian Online</p>
        </div>
        <div class="icon">
          <i class="fas fa-mobile-screen"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <button type="submit" class="btn btn-success btn-lg px-5 font-weight-bolder w-100">Panggil</button>
    </div>
    <div class="col-6">
      <button type="submit" class="btn btn-info btn-lg px-5 font-weight-bolder w-100">Panggil Ulang</button>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-8">
      <select id="service">
        <%@services.each do |s|%>
          <option value="<%=s.id%>"><%=s.name%></option>
        <%end%>
      </select>
    </div>
    <div class="col-4">
      <button type="submit" class="btn btn-danger btn-lg px-5 font-weight-bolder w-100">Pindah</button>
    </div>
  </div>
