<div class="card-body table-responsive p-0">
  <div class="card-header">
    <h3 class="card-title">Antrian Terlewat</h3>
  </div>
  <table class="table table-hover text-nowrap">
    <thead>
      <tr>
        <th>Nomor antrian</th>
        <th>Prioritas</th>
        <th>Panggil</th>
      </tr>
    </thead>
    <tbody>
      <%@today_queues.each do |t|%>
        <tr>
          <td><%=t.letter%><%=t.number.to_s.rjust(3, "0")%> <span class="badge <%=t.print_ticket_method == "online" ? "bg-danger" : "bg-warning"%>"><%=t.print_ticket_method%></span></td>
          <td><%=t.priority ? "Di utamakan" : "Normal"%></td>
          <td>
            <button type="submit" class="btn btn-info font-weight-bolder w-100 recall">Panggil Ulang</button>
          </td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
