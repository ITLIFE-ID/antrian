        <%=render "base/sidebar/single_menu", path: admin_service_types_path, name: t("types"), icon: ""%>
        <%=render "base/sidebar/nested_menu", parent: {name: t("schedule"), icon: ""}, 
          child: [            
            {name: t("working_days"), path: admin_service_working_days_path},
            {name: t("closing_days"), path: admin_service_closing_days_path},
          ]%>
        <%=render "base/sidebar/single_menu", path: admin_counters_path, name: t("counters"), icon: "fa-shop"%>
        <%=render "base/sidebar/single_menu", path: admin_users_path, name: t("users"), icon: "fa-users"%>
        <%=render "base/sidebar/single_menu", path: admin_user_counters_path, name: t("user_counters"), icon: "fa-people-line"%>
        <%=render "base/sidebar/single_menu", path: admin_voice_overs_path, name: t("voice_overs"), icon: "fa-user-astronaut"%>
        <%=render "base/sidebar/nested_menu", parent: {name: t("permission"), icon: "fa-user-shield"}, 
          child: [
            {name: t("permisi_roles"), path: admin_permisi_roles_path},
            {name: t("permisi_actors"), path: admin_permisi_actors_path},
            {name: t("permisi_actor_roles"), path: admin_permisi_actor_roles_path}            
          ]%>
        <%=render "base/sidebar/nested_menu", parent: {name: t("queue"), icon: "fa-users"}, 
          child: [
            {name: t("today_queues"), path: admin_today_queues_path},
            {name: t("backup_queues"), path: admin_backup_queues_path}
          ]%>
      </ul>
    </nav>
    <!-- /.sidebar-menu -->
  </div>
  <!-- /.sidebar -->
</aside>
