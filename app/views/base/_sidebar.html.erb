            {name: t("future_queue"), path: future_admin_dashboards_path},
          ]%>
        <%=render "base/sidebar/single_menu", path: admin_companies_path, name: t("companies"), icon: "fa-building"%>
        <%=render "base/sidebar/nested_menu", parent: {name: t("schedule"), icon: ""}, 
          child: [
            {name: t("working_days"), path: admin_company_working_days_path},
            {name: t("closing_days"), path: admin_company_closing_days_path},          
          ]%>
        <%=render "base/sidebar/single_menu", path: admin_buildings_path, name: t("buildings"), icon: "fa-building"%>
        <%=render "base/sidebar/nested_menu", parent: {name: t("setting")}, 
          child: [
            {name: t("client_display"), path: admin_client_displays_path},
            {name: t("service_clientdisplays"), path: admin_service_clientdisplays_path},
            {name: t("voiceover_buildings"), path: admin_voiceover_buildings_path},            
